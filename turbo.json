{
  "$schema": "https://turborepo.org/schema.json",
  "globalDotEnv": [".env"],
  "pipeline": {
    "dev": {
      "persistent": true,
      "cache": false
    },
    "lint": {},
    "lint:fix": {},
    "hardhat:test": {},
    "hardhat:compile": {},
    "clean": { "cache": false },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "artifacts/**"],
      "env": ["NEXT_PUBLIC_*"]
    }
  }
}
