{
  "name": "chain",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "hardhat compile",
    "hardhat:test": "hardhat test",
    "hardhat:test:gas": "REPORT_GAS=true hardhat test",
    "hardhat:compile": "hardhat compile",
    "deployContracts": "hardhat run --network mumbai scripts/deployContracts.ts",
    "deployAliens": "hardhat run --network mumbai scripts/deployAliens.ts",
    "deployEquipment": "hardhat run --network mumbai scripts/deployEquipment.ts",
    "deployBattlefield": "hardhat run --network mumbai scripts/deployBattlefield.ts",
    "task:verifyContracts": "hardhat --network mumbai verifyContracts mumbai",
    "task:setupContracts": "hardhat --network mumbai setupContracts mumbai",
    "clean": "rm -rf .turbo cache artifacts typechain node_modules"
  },
  "devDependencies": {
    "@chainlink/contracts": "^0.5.1",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@openzeppelin/contracts": "^4.8.3",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=12.0.0",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "ethers": "^6.8.0",
    "hardhat": "^2.18.3",
    "hardhat-gas-reporter": "^1.0.9",
    "solc": "^0.8.20",
    "solidity-coverage": "^0.8.5",
    "ts-node": ">=8.0.0",
    "typechain": "^8.1.1",
    "typescript": ">=4.5.0"
  }
}
